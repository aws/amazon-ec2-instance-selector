#!/usr/bin/env bash

set -euo pipefail

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
BUILD_DIR="${SCRIPTPATH}/../../build"

KERNEL=$(uname -s | tr '[:upper:]' '[:lower:]')
SHELLCHECK_VERSION="0.11.0"

function exit_and_fail() {
   echo "‚ùå Test Failed! Found a shell script with errors."
   exit 1
}
trap exit_and_fail INT ERR TERM

curl -sfLo "${BUILD_DIR}/shellcheck.tar.xz" https://github.com/koalaman/shellcheck/releases/download/v${SHELLCHECK_VERSION}/shellcheck-v${SHELLCHECK_VERSION}."${KERNEL}".x86_64.tar.xz
tar -C "${BUILD_DIR}" -xf "${BUILD_DIR}/shellcheck.tar.xz"
export PATH="${BUILD_DIR}/shellcheck-v${SHELLCHECK_VERSION}:$PATH"

find "${SCRIPTPATH}/../../" -type f -not -path "*/.git/*" -exec file --mime-type {} \; | awk -F ':' '/text\/x-shellscript/{print$1}' | xargs -n 1 shellcheck

echo "‚úÖ All shell scripts look good! üòé"
